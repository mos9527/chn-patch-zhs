msgid "3100:[name]七海[line]「いえーい！」[%p]"
msgstr "3100:[name]七海[line]Yay![%p]"

msgid "3200:[name]梨深[line]「いえーい！」[%p]"
msgstr "3200:[name]梨深[line]Yay![%p]"

